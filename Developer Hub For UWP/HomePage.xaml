<Page
    x:Class="Developer_Hub_For_UWP.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Developer_Hub_For_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlBackgroundAccentBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="Black">
            <Button Background="{ThemeResource SystemControlBackgroundAccentBrush}"  BorderThickness="0">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE10F;" Margin="0,0,5,0"/>
                    <TextBlock Text="Home"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            
        </StackPanel>
        <Frame x:Name="HomeFrame" Grid.Row="1"/>

    </Grid>
</Page>
